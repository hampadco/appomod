@model Vm_SetDb
<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3> تنظیمات

                            <small>پنل مدیریت چندکاره
                            </small>
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">تظیمات  </li>
                        <li class="breadcrumb-item active">ایجاد تنظیمات
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="card tab2-card">
            
            <div class="card-body">
                 <div class="" id="" >
                      <form action="/admin/home/addset" method="post">
                            <h4> تنظیمات</h4>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group row">
                                        <label for="validationCustom0" class="col-xl-3 col-md-4"> 
                                            مبلغ شرکت روزانه شرکت در مسابقه</label>
                                        <input required class="form-control col-md-4" asp-for="Amount" type="number"
                                           >
                                    </div>
                                    <div class="form-group row">
                                        <label for="validationCustom1" class="col-xl-3 col-md-4">مقدار امتیاز برای سوال صحیح
                                            </label>
                                        <input required class="form-control col-md-4" asp-for="RateCorrect" type="number"
                                            >
                                    </div>
                                    <div class="form-group row">
                                        <label for="validationCustom1" class="col-xl-3 col-md-4">مقدار امتیاز برای سوال غلط
                                            </label>
                                        <input required class="form-control col-md-4" asp-for="RateInCorrect" type="number"
                                            >
                                    </div>
                                   
                    
                                    <div class="form-group row">
                                        <label  for="validationCustom1" class="col-xl-3 col-md-4">ساعت شروع مسابقه</label>
                                        <input required class="form-control col-md-4" asp-for="TimeStart" type="number" placeholder="مانند ساعت 20 ">
                                    </div>
                                    <div class="form-group row">
                                        <label for="validationCustom1" class="col-xl-3 col-md-4">ساعت پایان مسابقه</label>
                                        <input required class="form-control col-md-4" asp-for="TimeEnd" type="number" placeholder="مانند ساعت 24 ">
                                    </div>
                                   
                                  <button type="submit" class="btn btn-primary" style="margin-left:0px ;">ذخیره</button>
                                </div>
                            </div>
                        </form>
                    </div>
                  
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>